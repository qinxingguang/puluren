
.background {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  right: 0;
}

.cover {
  width: 100%;
  height: 100%;
  position: absolute;
  opacity: 0.2;
  background: #fff;
}
.userinfo {
  padding-left: 120rpx;
}
.content {
  width: 90%;
  height: 50%;
  position: absolute;
  top: 40%;
  left: 5%;
  background: #fff;
  border-radius: 2%;
  box-shadow: #666 4rpx 4rpx 20rpx;
  text-align: center;
  box-sizing: border-box;
  padding: 70rpx 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.jusong {
  display: flex;/** 变得灵活**/
  flex-direction: column;/** 方向：纵排 **/
  align-items: center;/** 布局：居中 **/
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}

.userinfo-avatar[size] {
  width: 100rpx;
}


.userinfo-avatar:after {
  border: none;
}

.userinfo-nickname {
  font-size: 32rpx;
  color: #007aff;
  background-color: white;
  background-size: cover;
  text-align: center;
  /* padding-left: 0; */
  /* margin-left: 10px; */

}

.userinfo-nickname:after {
  border: none;
}


/* 这是设置边框 */
.border{
  border: 1px solid #70bcf6; 
  border-radius: 20px;  
  background-color: white;
}
button{
  margin-top: 5rpx;
  margin-bottom: 10rpx;
}